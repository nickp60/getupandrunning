    bindsym v exec "xrandr --output DP-1 --auto --rotate right --output HDMI1 --off --output VGA-1 --off --output HDMI-3 --off --output HDMI-2 --off --output HDMI-1 --off --output DP-3 --off --output DP-2 --off --output eDP-1 --off"; mode "default"
    bindsym m exec "xrandr --output eDP-1 --auto --output DP-1 --same-as eDP-1"; mode "default"
    bindsym d exec "xrandr --output eDP-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI-3 --off --output HDMI-2 --off --output HDMI-1 --off --output DP-3 --off --output DP-2 --off --output DP-1 --mode 1920x1080 --pos 1920x0 --rotate normal"; mode "default"


